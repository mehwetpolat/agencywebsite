@model List<AgencyWebSite.Entities.SocialMedia>
@{
    ViewBag.Title = "SocialMediaList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Sosyal Medya Sayfası</h4>

            <p class="card-description">
                Sosyal Medya ile ilgili işlemleri buradan yapabilirsiniz
            </p>

            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Personel Adı</th>
                            <th>Twitter</th>
                            <th>Facebook</th>
                            <th>Linkedin</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@count</td>
                                <td>@item.Teams.NameSurname</td>
                                <td>@item.TwitterUrl</td>
                                <td>@item.FacebookUrl</td>
                                <td>@item.LinkedinUrl</td>
                                <td><a class="btn btn-danger" href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaId"><i class="fa fa-trash"></i>Sil</a></td>
                                <td><a class="btn btn-success" href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaId"><i class="fa fa-pencil">Güncelle</i></a></td>
                            </tr>
                            count++;
                        }
                    </tbody>
                </table>
                <br />
                <a href="/SocialMedia/CreateSocialMedia" class="btn btn-info"><i class="mdi mdi-file-check btn-icon-append">Sosyal Medya Oluştur</i></a>
            </div>
        </div>
    </div>
</div>