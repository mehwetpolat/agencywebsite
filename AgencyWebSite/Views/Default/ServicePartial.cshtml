@model List<AgencyWebSite.Entities.Service>
<section class="page-section" id="services">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Hizmetler</h2>
            <h3 class="section-subheading text-muted">Her Türlü İhtiyacınıza Yönelik Hizmetlerimiz</h3>
        </div>
        <div class="row text-center">

            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <img src="@item.ServiceImageUrl" class="circle-image" width="85px" height="85px"/>
                    </span>
                    <h4 class="my-3">@item.ServiceTitle</h4>
                    <p class="text-muted">@item.ServiceDescription</p>
                </div>
            }
        </div>
    </div>
</section>
