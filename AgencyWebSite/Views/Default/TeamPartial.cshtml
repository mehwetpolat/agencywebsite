@model List<AgencyWebSite.Entities.Team>

<section class="page-section bg-light" id="team">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Bizim Ekibimiz</h2>
            <h3 class="section-subheading text-muted">Bu Noktada Olmamızı Sağlayan Mimarlarımız</h3>
        </div>
        <div class="row">

            @foreach (var item in Model)
            {
                <div class="col-lg-4">
                    <div class="team-member">
                        <img class="mx-auto rounded-circle" src="@item.ImageUrl" alt="..." />
                        <h4>@item.NameSurname</h4>
                        <p class="text-muted">@item.Branch.BranchName</p>

                        @foreach (var scMedia in item.SocialMedias)
                        {
                            <a class="btn btn-dark btn-social mx-2" href="@scMedia.TwitterUrl"><i class="fab fa-twitter"></i></a>
                            <a class="btn btn-dark btn-social mx-2" href="@scMedia.FacebookUrl"><i class="fab fa-facebook-f"></i></a>
                            <a class="btn btn-dark btn-social mx-2" href="@scMedia.LinkedinUrl"><i class="fab fa-linkedin-in"></i></a>
                        }
                    </div>
                </div>
            }
        </div>
        <div class="row">
            <div class="col-lg-8 mx-auto text-center"><p class="large text-muted">  </p></div>
        </div>
    </div>
</section>
