@model List<AgencyWebSite.Entities.Project>
@{
    ViewBag.Title = "ProjectList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Projeler Sayfası</h4>

            <p class="card-description">
                Projeler ile ilgili işlemleri buradan yapabilirsiniz
            </p>
            <form method="get">
                <div class="form-group">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Aranacak Kelime" aria-label="Recipient's username" aria-describedby="basic-addon2" name="searchText"/>
                        <div class="input-group-append">
                            <button class="btn btn-sm btn-primary" type="button"> Arama </button>
                        </div>
                    </div>
                </div>
            </form>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Proje Adı</th>
                            <th>Proje Resmi</th>
                            <th>Proje Kategorisi</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@count</td>
                                <td>@item.ProjectTitle</td>
                                <td><img src="@item.ProjectImageUrl" style="width:75px; height:75px" alt="Proje Görseli" /></td>
                                <td>@item.Category.CategoryName</td>
                                <td><a class="btn btn-danger" href="/Project/DeleteProject/@item.ProjectId"><i class="fa fa-trash"></i>Sil</a></td>
                                <td><a class="btn btn-success" href="/Project/UpdateProject/@item.ProjectId"><i class="fa fa-pencil">Güncelle</i></a></td>
                            </tr>
                            count++;
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Project/CreateProject" class="btn btn-info"><i class="mdi mdi-file-check btn-icon-append">Proje Oluştur</i></a>
            </div>
        </div>
    </div>
</div>
