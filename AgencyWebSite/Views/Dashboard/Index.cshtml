@model List<AgencyWebSite.Entities.Team>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    
}

<div class="row">
    <div class="col-sm-12 mt-3">
        <h3>İstatistikler</h3>
    </div>
    <div class="col-xl-12 col-lg-12 stretch-card grid-margin">
        <div class="col-3 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
            <div class="card bg-warning">
                <div class="card-body px-3 py-4">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="color-card">
                            <p class="mb-0 color-card-head">Bildirim Sayısı</p>
                            <h2 class="text-white">
                                @ViewBag.notificationCount
                            </h2>
                        </div>
                        <i class="card-icon-indicator mdi mdi-basket bg-inverse-icon-warning"></i>
                    </div>
                    <h6 class="text-white">Tüm Bildirimler</h6>
                </div>
            </div>
        </div>
        <div class="col-3 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
            <div class="card bg-danger">
                <div class="card-body px-3 py-4">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="color-card">
                            <p class="mb-0 color-card-head">Proje Sayısı</p>
                            <h2 class="text-white">
                                @ViewBag.projectCount
                            </h2>
                        </div>
                        <i class="card-icon-indicator mdi mdi-cube-outline bg-inverse-icon-danger"></i>
                    </div>
                    <h6 class="text-white">Tüm Projeler</h6>
                </div>
            </div>
        </div>
        <div class="col-3 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
            <div class="card bg-primary">
                <div class="card-body px-3 py-4">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="color-card">
                            <p class="mb-0 color-card-head">Grafik Tasarım Projeleri</p>
                            <h2 class="text-white">
                                @ViewBag.grafikCount
                            </h2>
                        </div>
                        <i class="card-icon-indicator mdi mdi-briefcase-outline bg-inverse-icon-primary"></i>
                    </div>
                    <h6 class="text-white">Tüm Projeler</h6>
                </div>
            </div>
        </div>

        <div class="col-3 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
            <div class="card bg-success">
                <div class="card-body px-3 py-4">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="color-card">
                            <p class="mb-0 color-card-head">Mesaj Sayısı</p>
                            <h2 class="text-white">
                                @ViewBag.messageCount
                            </h2>
                        </div>
                        <i class="card-icon-indicator mdi mdi-account-circle bg-inverse-icon-success"></i>
                    </div>
                    <h6 class="text-white">Tüm Mesajlar</h6>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-12 col-lg-12 stretch-card grid-margin">
        <div class="col-3 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
            <div class="card bg-success">
                <div class="card-body px-3 py-4">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="color-card">
                            <p class="mb-0 color-card-head">Personel Sayısı</p>
                            <h2 class="text-white">
                                @ViewBag.personelCount
                            </h2>
                        </div>
                        <i class="card-icon-indicator mdi mdi-account-circle bg-inverse-icon-success"></i>
                    </div>
                    <h6 class="text-white">Tüm Personeller</h6>
                </div>
            </div>
        </div>
        <div class="col-3 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
            <div class="card bg-danger">
                <div class="card-body px-3 py-4">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="color-card">
                            <p class="mb-0 color-card-head">Hizmet Sayısı</p>
                            <h2 class="text-white">
                                @ViewBag.serviceCount
                            </h2>
                        </div>
                        <i class="card-icon-indicator mdi mdi-cube-outline bg-inverse-icon-danger"></i>
                    </div>
                    <h6 class="text-white">Tüm Hizmetler</h6>
                </div>
            </div>
        </div>
        <div class="col-3 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
            <div class="card bg-danger">
                <div class="card-body px-3 py-4">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="color-card">
                            <p class="mb-0 color-card-head">Admin Sayısı</p>
                            <h2 class="text-white">
                                @ViewBag.adminCount
                            </h2>
                        </div>
                        <i class="card-icon-indicator mdi mdi-cube-outline bg-inverse-icon-danger"></i>
                    </div>
                    <h6 class="text-white">Tüm Adminler</h6>
                </div>
            </div>
        </div>
        <div class="col-3 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
            <div class="card bg-danger">
                <div class="card-body px-3 py-4">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="color-card">
                            <p class="mb-0 color-card-head">Okunmamış Mesaj Sayısı</p>
                            <h2 class="text-white">
                                @ViewBag.falseMessageCount
                            </h2>
                        </div>
                        <i class="card-icon-indicator mdi mdi-cube-outline bg-inverse-icon-danger"></i>
                    </div>
                    <h6 class="text-white">Tüm Mesajlar</h6>
                </div>
            </div>
        </div>
    </div>
</div>

<p></p>

@Html.Action("StaffData", "Dashboard")

<p></p>

@Html.Action("LastMessages", "Dashboard")

@Html.Action("BusinessSurvey", "Dashboard")