@model List<AgencyWebSite.Entities.Team>
@{
    Layout = null;
    var amount = 45;
    var projects = 3;
    var verify = 0;
    var yazi = "Onaylanmayan Personel";
}

<div class="row">
    <div class="col-xl-8 col-sm-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body px-0 overflow-auto">
                <h4 class="card-title pl-4">Personel Analizi</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead class="bg-light">
                            <tr>
                                <th>Personel</th>
                                <th>Branşı</th>
                                <th>Projeleri</th>
                                <th>Getirisi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                if (verify % 2 == 0)
                                {
                                    yazi = "Onaylanan Personel";
                                }
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="@item.ImageUrl" alt="image" />
                                            <div class="table-user-name ml-3">
                                                <p class="mb-0 font-weight-medium">@item.NameSurname</p>
                                                <small>@yazi</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@item.Branch.BranchName</td>
                                    <td>
                                        <div class="badge badge-inverse-success">@projects</div>
                                    </td>
                                    <td>$@amount</td>
                                </tr>

                                verify++;
                                amount += 86;
                                projects += 2;
                            }


                        </tbody>
                    </table>
                </div>
                <a class="text-black mt-3 d-block pl-4" href="">
                    <span class="font-weight-medium h6">Tüm Personelleri Görüntüle</span>
                    <i class="mdi mdi-chevron-right"></i>
                </a>
            </div>
        </div>
    </div>


    <div class="col-xl-4 col-sm-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="card-title font-weight-medium">Iş Akışı</div>
                <p class="text-muted">Bazı Şehirlerde Yürütmüş Olduğumuz Projeler</p>
                <div class="d-flex flex-wrap border-bottom py-2 border-top justify-content-between">
                    <img class="survey-img mb-lg-3" src="~/Templates/Breeze-Free-Bootstrap-Admin-Template-1.0.0/template/assets/images/dashboard/img_3.jpg" alt="" />
                    <div class="pt-2">
                        <h5 class="mb-0">Web Siteleri</h5>
                        <p class="mb-0 text-muted">İstanbul, Türkiye</p>
                        <h5 class="mb-0">$600/ay</h5>
                    </div>
                </div>
                <div class="d-flex flex-wrap border-bottom py-2 justify-content-between">
                    <img class="survey-img mb-lg-3" src="~/Templates/Breeze-Free-Bootstrap-Admin-Template-1.0.0/template/assets/images/dashboard/img_1.jpg" alt="" />
                    <div class="pt-2">
                        <h5 class="mb-0">Akıllı Ev Sis.</h5>
                        <p class="mb-0 text-muted">Ankara, Türkiye</p>
                        <h5 class="mb-0">$330/ay</h5>
                    </div>
                </div>
                <div class="d-flex flex-wrap border-bottom py-2 justify-content-between">
                    <img class="survey-img mb-lg-3" src="~/Templates/Breeze-Free-Bootstrap-Admin-Template-1.0.0/template/assets/images/dashboard/img_2.jpg" alt="" />
                    <div class="pt-2">
                        <h5 class="mb-0">Yapay Zeka</h5>
                        <p class="mb-0 text-muted">İzmir, Türkiye</p>
                        <h5 class="mb-0">$459/ay</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

