@model List<AgencyWebSite.Entities.Message>
<div class="row">
    <div class="col-xl-4 col-md-6 grid-margin stretch-card ml-2">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-black">Son Mesajlar</h4>
                <p class="text-muted">Tümü</p>

                @foreach (var item in Model)
                {
                    <div class="row pt-2 pb-1">
                        <div class="col-12 col-sm-7">
                            <div class="row">
                                <div class="col-8 col-md-8 p-sm-0">
                                    <h6 class="mb-0">@item.NameSurname</h6>
                                    <p class="text-muted font-12">@item.SendDate</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-5 pl-0">
                            <p class="text-muted font-12">@item.Description</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
