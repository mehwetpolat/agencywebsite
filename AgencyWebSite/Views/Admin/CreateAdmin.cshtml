@model AgencyWebSite.Entities.Admin
@{
    ViewBag.Title = "CreateAdmin";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Admin Oluşturma Sayfası</h2>


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Admin Ekleme Sayfası</h4>
            <p class="card-description">Admin ekleme işlemlerini buradan yapabilirsiniz.</p>
            <form class="forms-sample" method="post">

                <div class="form-group">
                    <label for="exampleInputName1">Kullanıcı Adı</label>
                    <input type="text"
                           class="form-control"
                           id="exampleInputName1"
                           placeholder="Kullanıcı Adı"
                           name="UserName" />
                </div>

                <div class="form-group">
                    <label for="exampleInputName2">Şifresi</label>
                    <input type="text"
                           class="form-control"
                           id="exampleInputName1"
                           placeholder="Şifresi"
                           name="Password" />
                </div>

                <div class="form-group">
                    <label for="exampleInputName2">Adminin Adı</label>
                    <input type="text"
                           class="form-control"
                           id="exampleInputName1"
                           placeholder="Adminin Adı"
                           name="Name" />
                </div>

                <div class="form-group">
                    <label for="exampleInputName2">Adminin Soyadı</label>
                    <input type="text"
                           class="form-control"
                           id="exampleInputName1"
                           placeholder="Adminin Soyadı"
                           name="Surname" />
                </div>

                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button type="reset" class="btn btn-light">Vazgeç</button>
            </form>
        </div>
    </div>
</div>