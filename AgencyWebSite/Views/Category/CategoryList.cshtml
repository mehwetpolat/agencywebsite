@model List<AgencyWebSite.Entities.Category>
@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kategoriler Sayfası</h4>

            <p class="card-description">
                Kategoriler ile ilgili işlemleri buradan yapabilirsiniz
            </p>

            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Kategori Adı</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@count</td>
                                <td>@item.CategoryName</td>
                                <td><a class="btn btn-danger" href="/Category/DeleteCategory/@item.CategoryId"><i class="fa fa-trash"></i>Sil</a></td>
                                <td><a class="btn btn-success" href="/Category/UpdateCategory/@item.CategoryId"><i class="fa fa-pencil">Güncelle</i></a></td>
                            </tr>
                            count++;
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Category/CreateCategory" class="btn btn-info"><i class="mdi mdi-file-check btn-icon-append">Kategori Oluştur</i></a>
            </div>
        </div>
    </div>
</div>
