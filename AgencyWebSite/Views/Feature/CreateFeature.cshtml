@model AgencyWebSite.Entities.Feature
@{
    ViewBag.Title = "CreateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Feature Ekleme Sayfası</h4>
            <p class="card-description">Feature ekleme işlemlerini buradan yapabilirsiniz.</p>
            <form class="forms-sample" method="post">

                <div class="form-group">
                    <label for="exampleInputName1">Feature Başlığı</label>
                    <input type="text"
                           class="form-control"
                           id="exampleInputName1"
                           placeholder="Feature Adı"
                           name="FeatureTitle" />
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Feature Açıklaması</label>
                    <textarea rows="4" class="form-control" name="FeatureDescription"></textarea>
                </div>

                <div class="form-group">
                    <label for="exampleInputName2">Resim Yolu</label>
                    <input type="text"
                           class="form-control"
                           id="exampleInputName1"
                           placeholder="Feature Resim Yolu"
                           name="FeatureImageUrl" />
                </div>

                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button type="reset" class="btn btn-light">Vazgeç</button>
            </form>
        </div>
    </div>
</div>