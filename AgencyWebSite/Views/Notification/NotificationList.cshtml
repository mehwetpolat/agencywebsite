@model List<AgencyWebSite.Entities.Notification>
@{
    ViewBag.Title = "NotificationList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Bildirimler Sayfası</h4>

            <p class="card-description">
                Bildirimler ile ilgili işlemleri buradan yapabilirsiniz
            </p>

            <form method="get">
                <div class="form-group">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Aranacak Kelime" aria-label="Aranacak Kelime" aria-describedby="basic-addon2" name="searchText" />
                        <div class="input-group-append">
                            <button class="btn btn-sm btn-primary" type="button"> Arama</button>
                        </div>
                    </div>
                </div>
            </form>

            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>İsim Soyisim</th>
                            <th>Açıklaması</th>
                            <th>Resmi</th>
                            <th>Sil</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@count</td>
                                <td>@item.NameSurname</td>
                                <td>@item.Description</td>
                                <td><img src="@item.ImageUrl" style="width:75px; height:75px" alt="Proje Görseli" /></td>
                                <td><a class="btn btn-danger" href="/Notification/DeleteNotification/@item.NotificationId"><i class="fa fa-trash"></i>Sil</a></td>
                            </tr>
                            count++;
                        }
                    </tbody>
                </table>
                <br />
            </div>
        </div>
    </div>
</div>
